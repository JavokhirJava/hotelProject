<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Java2001</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hotel</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">false</property>

        <!-- MAPPINGS -->
        <mapping class="org.example.entity.EmployeeType"/>
        <mapping class="org.example.entity.EmployeeEntity"/>
        <mapping class="org.example.entity.RoomComfortEntity"/>
        <mapping class="org.example.entity.RoomEntity"/>
        <mapping class="org.example.entity.BookingEntity"/>
        <mapping class="org.example.entity.GuestEntity"/>
        <mapping class="org.example.entity.PassportEntity"/>
        <mapping class="org.example.entity.SmenaEntity"/>
        <mapping class="org.example.entity.OutcomeEntity"/>
        <mapping class="org.example.entity.CleanedRoomEntity"/>
        <mapping class="org.example.entity.ComplainEntity"/>
        <mapping class="org.example.entity.ProfileEntity"/>
    </session-factory>

</hibernate-configuration>
